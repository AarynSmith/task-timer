{
  "name": "task-timer",
  "version": "0.7.0",
  "author": "Aaryn Smith <github.com/aarynSmith>",
  "description": "Multiple Task Timer",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.50",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.2.0",
    "electron-is-dev": "^1.2.0",
    "electron-store": "^8.1.0",
    "electronmon": "^1.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "sass": "^1.26.10",
    "typescript": "^3.7.5",
    "uuid": "^9.0.0",
    "wait-on": "^5.1.0"
  },
  "scripts": {
    "start": "concurrently \"yarn react-serve\" \"wait-on http://localhost:3000 && yarn run electron-start\"",
    "build": "yarn react-build && yarn run electron-build --win --mac",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "release": "yarn react-build && yarn run electron-release",
    "electron-start": "electronmon .",
    "electron-build": "electron-builder",
    "electron-release": "electron-builder --publish=always",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-serve": "BROWSER=none yarn react-start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron-main.js",
  "homepage": "./",
  "devDependencies": {
    "@types/uuid": "^8.3.4",
    "electron": "^9.1.0",
    "electron-builder": "^22.7.0",
    "electron-devtools-installer": "^3.2.0"
  },
  "build": {
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "win": {
      "target": {
        "target": "portable",
        "arch": "x64"
      }
    },
    "mac": {
      "target": {
        "target": "pkg"
      }
    },
    "files": [
      "build/**/*",
      "public/electron-main.js",
      "package.json"
    ]
  }
}
